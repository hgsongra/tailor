<div class="customLogin">
  <h2><i class="bi bi-key-fill me-2"></i>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="col mt-2">
      <%= f.label :email, class: "form-label" %>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", required: true, placeholder: "Enter your email" %>
      </div>
    </div>

    <div class="actions mt-2 mb-2">
      <%= f.button class: "btn btn-primary", type: "submit" do %>
        <i class="bi bi-send-fill me-1"></i>Send me reset password details
      <% end %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>