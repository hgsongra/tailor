<div class="row pagetitle g-3">
  <div class="col-12 col-lg-4">
    <h1 class="h3"><i class="bi bi-people-fill me-2"></i>ગ્રાહકોની યાદી</h1>
  </div>
  <div class="col-12 col-lg-5">
    <%= form_tag root_path, method: :get, class: "d-flex" do %>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-search"></i></span>
        <%= text_field_tag :query, params[:query], class: "form-control", type: "search", placeholder: "નામ/ગામ/મોબાઇલ થી શોધો...", "aria-label": "Search"  %>
        <button type="submit" class="btn btn-success"><i class="bi bi-search me-1"></i>શોધો</button>
      </div>
    <%end%>
  </div>
  <div class="col-12 col-lg-3 d-flex justify-content-lg-end">
    <%= link_to new_customer_path, class: "btn btn-primary w-100 w-lg-auto" do %>
      <i class="bi bi-person-plus-fill me-1"></i>નવા ગ્રાહક ઉમેરો
    <% end %>
  </div>
</div><!-- End Page Title -->

<section class="section mt-3">
  <div class="row">
    <div class="col-lg-12">

      <div class="card">
        <div class="card-body table-responsive">

          <!-- Default Table -->
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col"><i class="bi bi-person-badge me-1"></i><%= "ગ્રાહક#" %></th>
                <th scope="col"><i class="bi bi-person-fill me-1"></i>નામ</th>
                <th scope="col" class="d-none d-md-table-cell"><i class="bi bi-geo-alt-fill me-1"></i>ગામ</th>
                <th scope="col" class="d-none d-md-table-cell"><i class="bi bi-telephone-fill me-1"></i>મોબાઇલ નંબર</th>
                <th scope="col" class="d-none d-lg-table-cell"><i class="bi bi-calendar-event-fill me-1"></i>ડિલિવરી તારીખ</th>
                <th scope="col" colspan="3"><i class="bi bi-gear-fill me-1"></i>ક્રિયાઓ</th>
              </tr>
            </thead>
            <tbody>
              <%if @customers.length > 0 %>
                <% @customers.each do |customer| %>
                  <%= render customer %>
                <% end %>
              <% else %>
                  <tr>
                    <td>
                      <div class="alert alert-danger">
                        કોઈ ગ્રાહકની માહિતી મળી નથી.
                      </div>
                    </td>
                  </tr>
              <% end %>
            </tbody>
          </table>
          <!-- End Default Table Example -->
        </div>
      </div>
    </div>
  </div>
</section>

<div class="col-lg-12 custom-page">
  <%= paginate @customers %>
</div>
