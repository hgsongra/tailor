<div class="row pagetitle g-3 align-items-center">
  <div class="col-12 col-sm-8">
    <h1 class="h3"><i class="bi bi-person-badge-fill me-2"></i>ગ્રાહકની માહિતી</h1>
  </div>
  <div class="col-12 col-sm-4 d-flex justify-content-sm-end">
    <%= link_to '#', :onclick => "window.print();return false;", class: "btn btn-primary w-100 w-sm-auto" do %>
      <i class="bi bi-printer-fill me-1"></i>પ્રિન્ટ કરો
    <% end %>
  </div>
</div>

<section class="section">
  <div class="row">
      <div class="col-12 mt-2">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title mb-3"><i class="bi bi-person-vcard me-2"></i>ગ્રાહકની વિગતો</h5>
            <div class="row g-3">
              <div class="col-6 col-sm-4 col-lg">
                <b><i class="bi bi-person-badge me-1"></i>ગ્રાહક નંબર:</b> <br> <%= @customer.customer_no %>
              </div>
              <div class="col-6 col-sm-4 col-lg">
                <b><i class="bi bi-person-fill me-1"></i>નામ:</b> <br> <%= @customer.name %>
              </div>
              <div class="col-6 col-sm-4 col-lg">
                <b><i class="bi bi-geo-alt-fill me-1"></i>ગામ:</b> <br> <%= @customer.city %>
              </div>
              <div class="col-6 col-sm-4 col-lg">
                <b><i class="bi bi-telephone-fill me-1"></i>મોબાઇલ નંબર:</b> <br> <%= @customer.contact %>
              </div>
              <div class="col-6 col-sm-4 col-lg">
                <b><i class="bi bi-calendar-event-fill me-1"></i>ડિલિવરી તારીખ:</b> <br> <%= @customer.delivery_date %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-12 mt-2">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title mb-3"><i class="bi bi-rulers me-2"></i>પેન્ટની વિગતો</h5>
            <div class="row g-3">
              <div class="col-4 col-sm-4 col-lg-2">
                <b><i class="bi bi-arrows-vertical me-1"></i>લંબાઈ:</b> <br> <%= @customer.pant_lambai %>
              </div>
              <div class="col-4 col-sm-4 col-lg-2">
                <b><i class="bi bi-arrows-expand me-1"></i>મોરી:</b> <br> <%= @customer.pant_mori %>
              </div>
              <div class="col-4 col-sm-4 col-lg-2">
                <b><i class="bi bi-arrows-collapse me-1"></i>કમર:</b> <br> <%= @customer.pant_kamar %>
              </div>
              <div class="col-4 col-sm-4 col-lg-2">
                <b><i class="bi bi-arrows-fullscreen me-1"></i>સીટ:</b> <br> <%= @customer.pant_seat %>
              </div>
              <div class="col-4 col-sm-4 col-lg-2">
                <b><i class="bi bi-arrows-angle-expand me-1"></i>જાંગ:</b> <br> <%= @customer.pant_jang %>
              </div>
              <div class="col-4 col-sm-4 col-lg-2">
                <b><i class="bi bi-arrows-move me-1"></i>જોરો:</b> <br> <%= @customer.pant_joro %>
              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="col-12 mt-2">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title mb-3"><i class="bi bi-rulers me-2"></i>શર્ટની વિગતો</h5>
            <div class="row g-3">
              <div class="col-4 col-sm-3 col-lg">
                <b><i class="bi bi-circle me-1"></i>કોલર:</b> <br> <%= @customer.shirt_kolar %>
              </div>
              <div class="col-4 col-sm-3 col-lg">
                <b><i class="bi bi-arrows-vertical me-1"></i>લંબાઈ:</b> <br> <%= @customer.shirt_lambai %>
              </div>
              <div class="col-4 col-sm-3 col-lg">
                <b><i class="bi bi-arrows-expand me-1"></i>શોલ્ડર:</b> <br> <%= @customer.shirt_shoulder %>
              </div>
              <div class="col-4 col-sm-3 col-lg">
                <b><i class="bi bi-arrow-right me-1"></i>બાય:</b> <br> <%= @customer.shirt_baay %>
              </div>
              <div class="col-4 col-sm-3 col-lg">
                <b><i class="bi bi-arrows-fullscreen me-1"></i>છાતી:</b> <br> <%= @customer.shirt_chhati %>
              </div>
              <div class="col-4 col-sm-3 col-lg">
                <b><i class="bi bi-arrows-collapse me-1"></i>કમર:</b> <br> <%= @customer.shirt_kamar %>
              </div>
              <div class="col-4 col-sm-3 col-lg">
                <b><i class="bi bi-arrows-angle-expand me-1"></i>સીટ:</b> <br> <%= @customer.shirt_seat %>
              </div>
              <div class="col-4 col-sm-3 col-lg">
                <b><i class="bi bi-grip-horizontal me-1"></i>કફ:</b> <br> <%= @customer.shirt_kaf %>
              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="col-12 mt-2">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title mb-3"><i class="bi bi-journal-text me-2"></i>નોંધ</h5>
            <div class="p-2">
              <i class="bi bi-pencil-square me-1"></i><%= @customer.notes %>
            </div>
          </div>
        </div>
      </div>
  </div>
</section>


<div class="row mt-3 g-2">
  <div class="col-12 col-sm-6 col-lg-4">
    <%= link_to edit_customer_path(@customer), class: "btn btn-primary w-100" do %>
      <i class="bi bi-pencil-fill me-1"></i>ગ્રાહકમાં ફેરફાર કરો
    <% end %>
  </div>
  <div class="col-12 col-sm-6 col-lg-4">
    <%= link_to customers_path, class: "btn btn-secondary w-100" do %>
      <i class="bi bi-arrow-left-circle-fill me-1"></i>ગ્રાહકોની સૂચિ પર પાછા ફરો
    <% end %>
  </div>
  <div class="col-12 col-sm-6 col-lg-4">
    <%= button_to @customer, method: :delete, class: "btn btn-danger w-100" do %>
      <i class="bi bi-trash-fill me-1"></i>ગ્રાહકને દૂર કરો
    <% end %>
  </div>
</div>
