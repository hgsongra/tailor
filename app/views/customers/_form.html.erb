<section class="section">
  <div class="row">
    <%= form_with(model: customer, html: {class: "row g-3"}) do |form| %>
      <% if customer.errors.any? %>
        <div class="col-lg-12" style="color: red">
          <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

          <ul>
            <% customer.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="col-lg-12">
        <div class="card">
          <div class="row card-body">
            <h5 class="card-title">Customer Details</h5>
            <div class="col">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class:"form-control", id:"name", required: true %>
            </div>
            <div class="col">
              <%= form.label :city, class: "form-label" %>
              <%= form.text_field :city, class:"form-control", id:"city", required: true %>
            </div>
            <div class="col">
              <%= form.label :contact, class: "form-label" %>
              <%= form.telephone_field :contact, class:"form-control", id:"contact", required: true %>
            </div>
            <div class="col">
              <%= form.label :delivery_date, class: "form-label" %>
              <%= form.date_field :delivery_date, class:"form-control", id:"delivery_date", value: form.object.delivery_date, required: true %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-12">
        <div class="card">
          <div class="row card-body">
            <h5 class="card-title">Pant Details</h5>
            <div class="col">
              <%= form.label :pant_lambai, class: "form-label" %>
              <%= form.text_field :pant_lambai, class:"form-control", id:"pant_lambai", required: true %>
            </div>
            <div class="col">
              <%= form.label :pant_mori, class: "form-label" %>
              <%= form.text_field :pant_mori, class:"form-control", id:"pant_mori", required: true %>
            </div>
            <div class="col">
              <%= form.label :pant_kamar, class: "form-label" %>
              <%= form.text_field :pant_kamar, class:"form-control", id:"pant_kamar", required: true %>
            </div>
            <div class="col">
              <%= form.label :pant_seat, class: "form-label" %>
              <%= form.text_field :pant_seat, class:"form-control", id:"pant_seat", required: true %>
            </div>
            <div class="col">
              <%= form.label :pant_jang, class: "form-label" %>
              <%= form.text_field :pant_jang, class:"form-control", id:"pant_jang", required: true %>
            </div>
            <div class="col">
              <%= form.label :pant_joro, class: "form-label" %>
              <%= form.text_field :pant_joro, class:"form-control", id:"pant_joro", required: true %>
            </div>
          </div>
        </div>
      </div>


      <div class="col-lg-12">
        <div class="card">
          <div class="row card-body">
            <h5 class="card-title">Shirt Details</h5>
            <div class="col">
              <%= form.label :shirt_kolar, class: "form-label" %>
              <%= form.text_field :shirt_kolar, class:"form-control", id:"shirt_kolar", required: true %>
            </div>
            <div class="col">
              <%= form.label :shirt_lambai, class: "form-label" %>
              <%= form.text_field :shirt_lambai, class:"form-control", id:"shirt_lambai", required: true %>
            </div>
            <div class="col">
              <%= form.label :shirt_shoulder, class: "form-label" %>
              <%= form.text_field :shirt_shoulder, class:"form-control", id:"shirt_shoulder", required: true %>
            </div>
            <div class="col">
              <%= form.label :shirt_baay, class: "form-label" %>
              <%= form.text_field :shirt_baay, class:"form-control", id:"shirt_baay", required: true %>
            </div>
            <div class="col">
              <%= form.label :shirt_chhati, class: "form-label" %>
              <%= form.text_field :shirt_chhati, class:"form-control", id:"shirt_chhati", required: true %>
            </div>
            <div class="col">
              <%= form.label :shirt_kamar, class: "form-label" %>
              <%= form.text_field :shirt_kamar, class:"form-control", id:"shirt_kamar", required: true %>
            </div>
            <div class="col">
              <%= form.label :shirt_seat, class: "form-label" %>
              <%= form.text_field :shirt_seat, class:"form-control", id:"shirt_seat", required: true %>
            </div>
          </div>
        </div>
      </div>
            
      <div class="justify-content-start">
        <%= form.submit(class: "btn btn-primary") %>
      </div>
    <%end%><!-- End Multi Columns Form -->
  </div>
</section>