<section class="section">
  <div class="row">
    <%= form_with(model: customer, html: {class: "row g-3"}) do |form| %>
      <% if customer.errors.any? %>
        <div class="col-lg-12" style="color: red">
          <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

          <ul>
            <% customer.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="col-lg-12">
        <div class="card">
          <div class="row card-body">
            <h5 class="card-title">ગ્રાહકની વિગતો</h5>
            <div class="col">
              <%= form.label :name, "નામ", class: "form-label" %>
              <%= form.text_field :name, class:"form-control", id:"name", required: true %>
            </div>
            <div class="col">
              <%= form.label :city, "ગામ", class: "form-label" %>
              <%= form.text_field :city, class:"form-control", id:"city", required: true %>
            </div>
            <div class="col">
              <%= form.label :contact, "મોબાઇલ નંબર", class: "form-label" %>
              <%= form.number_field :contact, class:"form-control", id:"contact", required: true %>
            </div>
            <div class="col">
              <%= form.label :delivery_date, "ડિલિવરી તારીખ", class: "form-label" %>
              <%= form.date_field :delivery_date, class:"form-control", id:"delivery_date", value: form.object.delivery_date, required: true %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-12">
        <div class="card">
          <div class="row card-body">
            <h5 class="card-title">પેન્ટની વિગતો</h5>
            <div class="col">
              <%= form.label :pant_lambai, "લંબાઈ", class: "form-label" %>
              <%= form.number_field :pant_lambai, step: :any, class:"form-control", id:"pant_lambai", required: true %>
            </div>
            <div class="col">
              <%= form.label :pant_mori, "મોરી", class: "form-label" %>
              <%= form.number_field :pant_mori, step: :any, class:"form-control", id:"pant_mori", required: true %>
            </div>
            <div class="col">
              <%= form.label :pant_kamar, "કમર", class: "form-label" %>
              <%= form.number_field :pant_kamar, step: :any, class:"form-control", id:"pant_kamar", required: true %>
            </div>
            <div class="col">
              <%= form.label :pant_seat, "સીટ", class: "form-label" %>
              <%= form.number_field :pant_seat, step: :any, class:"form-control", id:"pant_seat", required: true %>
            </div>
            <div class="col">
              <%= form.label :pant_jang, "જાંગ", class: "form-label" %>
              <%= form.number_field :pant_jang, step: :any, class:"form-control", id:"pant_jang", required: true %>
            </div>
            <div class="col">
              <%= form.label :pant_joro, "જોરો", class: "form-label" %>
              <%= form.number_field :pant_joro, step: :any, class:"form-control", id:"pant_joro", required: true %>
            </div>
          </div>
        </div>
      </div>


      <div class="col-lg-12">
        <div class="card">
          <div class="row card-body">
            <h5 class="card-title">શર્ટની વિગતો</h5>
            <div class="col">
              <%= form.label :shirt_kolar, "કોલર", class: "form-label" %>
              <%= form.number_field :shirt_kolar, step: :any, class:"form-control", id:"shirt_kolar", required: true %>
            </div>
            <div class="col">
              <%= form.label :shirt_lambai, "લંબાઈ", class: "form-label" %>
              <%= form.number_field :shirt_lambai, step: :any, class:"form-control", id:"shirt_lambai", required: true %>
            </div>
            <div class="col">
              <%= form.label :shirt_shoulder, "શોલ્ડર", class: "form-label" %>
              <%= form.number_field :shirt_shoulder, step: :any, class:"form-control", id:"shirt_shoulder", required: true %>
            </div>
            <div class="col">
              <%= form.label :shirt_baay, "બાય", class: "form-label" %>
              <%= form.number_field :shirt_baay, step: :any, class:"form-control", id:"shirt_baay", required: true %>
            </div>
            <div class="col">
              <%= form.label :shirt_chhati, "છાતી", class: "form-label" %>
              <%= form.number_field :shirt_chhati, step: :any, class:"form-control", id:"shirt_chhati", required: true %>
            </div>
            <div class="col">
              <%= form.label :shirt_kamar, "કમર", class: "form-label" %>
              <%= form.number_field :shirt_kamar, step: :any, class:"form-control", id:"shirt_kamar", required: true %>
            </div>
            <div class="col">
              <%= form.label :shirt_seat, "સીટ", class: "form-label" %>
              <%= form.number_field :shirt_seat, step: :any, class:"form-control", id:"shirt_seat", required: true %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-12">
        <div class="card">
          <div class="row card-body">
            <h5 class="card-title">નોંધ</h5>
            <div class="col">
              <%= form.text_area :notes, class:"form-control", id:"notes" %>
            </div>
          </div>
        </div>
      </div>
            
      <div class="justify-content-start">
        <%= form.submit( (customer.new_record? ? "નવો ગ્રાહક ઉમેરો" : "ગ્રાહકની માહિતી સુધારો"), class: "btn btn-primary") %>
      </div>
    <%end%><!-- End Multi Columns Form -->
  </div>
</section>